<div class="container coasters-index">

{{#with eachCoaster}}
  <h1 style="font-weight: 100">{{this.name}}</h1>

  <h4>Descripción</h4>
  <p>{{this.description}}</p>
  <p><strong>Longitud: </strong> {{this.length}}m | <strong>Inversiones: </strong> {{this.inversions}}</p>

  <hr>

  <h5>Sobre el parque</h5>
  <p><strong>Nombre: </strong>{{this.park_id.name}}</p>
  <p><strong>Descripción: </strong>{{this.park_id.description}}</p>
{{/with}}

  <a href="/coasters" class="btn btn-dark">Volver</a>

</div>